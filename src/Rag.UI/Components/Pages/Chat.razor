@page "/chat"
@using System.ComponentModel.DataAnnotations
@using Microsoft.Extensions.AI
@rendermode InteractiveServer


@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime

<PageTitle>Chat</PageTitle>

<div class="mx-auto flex h-[750px] max-w-5xl flex-col gap-4 p-4">
    <!-- Chat Messages Container -->
    <div class="flex-1 overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-gray-900">
        <div @ref="_messagesContainer" class="h-full space-y-4 overflow-y-auto scroll-smooth p-6" data-messages-container>
            @if (Messages.Count == 0)
            {
                <div class="flex h-full items-center justify-center text-gray-500 dark:text-gray-400">
                    <div class="text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                        <p class="mt-2 text-sm">Start a conversation with the librarian</p>
                    </div>
                </div>
            }
            else
            {
                @foreach (var message in Messages)
                {
                    <div class="@GetMessageContainerClass(message.Role)" @key="@message.MessageId">
                        <!-- Avatar -->
                        <div class="flex-shrink-0">
                            <div class="@GetAvatarClass(message.Role)">
                                @GetAvatarInitials(message.Role)
                            </div>
                        </div>
                        
                        <!-- Message Content -->
                        <div class="@GetMessageBubbleClass(message.Role)">
                            <div class="whitespace-pre-line">@message.Text</div>
                        </div>
                    </div>
                }
            }
            
            @if (IsLoading)
            {
                <div class="flex items-end justify-start gap-3">
                    <div class="flex-shrink-0">
                        <div class="from-ocio-blue-600 to-ocio-blue-400 flex h-8 w-8 items-center justify-center rounded-md bg-gradient-to-br text-xs font-semibold text-white">
                            AI
                        </div>
                    </div>
                    <div class="rounded-2xl border border-gray-200 bg-white px-4 py-3 shadow-sm dark:border-gray-700 dark:bg-gray-800">
                        <div class="flex items-center gap-1">
                            <div class="h-2 w-2 animate-bounce rounded-full bg-gray-400" style="animation-delay: 0ms"></div>
                            <div class="h-2 w-2 animate-bounce rounded-full bg-gray-400" style="animation-delay: 150ms"></div>
                            <div class="h-2 w-2 animate-bounce rounded-full bg-gray-400" style="animation-delay: 300ms"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Input Area -->
    <div class="flex-none">
        <EditForm Model="@InputModel" OnValidSubmit="HandleSubmitAsync" class="relative">
            <DataAnnotationsValidator />
            <div class="flex gap-3">
                <div class="relative flex-1">
                    <textarea 
                        @bind-value="@InputModel.Message" 
                        @bind-value:event="oninput"
                        @onkeydown="HandleKeyDown"
                        placeholder="Ask the librarian a question..."
                        class="max-h-[200px] min-h-[56px] w-full resize-none rounded-xl border border-gray-300 bg-white px-4 py-3 pr-12 focus:ring-ocio-blue-500 focus:border-transparent focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                        rows="1" disabled="@IsLoading"></textarea>
                </div>
                <button 
                    type="submit" 
                    disabled="@(IsLoading || string.IsNullOrWhiteSpace(InputModel.Message))"
                    class="bg-ocio-blue-600 flex h-[56px] w-[56px] flex-shrink-0 items-center justify-center rounded-xl text-white shadow-md transition-colors hover:bg-ocio-blue-700 disabled:cursor-not-allowed disabled:bg-gray-300">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                    </svg>
                </button>
                <button 
                    class="flex h-[56px] w-[56px] flex-shrink-0 cursor-pointer items-center justify-center rounded-xl bg-red-600 text-white shadow-md transition-colors disabled:cursor-not-allowed disabled:bg-red-200"
                    disabled="@(Messages.Count == 0 || IsLoading)"
                    
                    @onclick="() => { if (IsLoading) return; Messages.Clear(); StateHasChanged(); }"
                >
                    Clear
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private sealed class ChatInputModel
    {
        [Required(ErrorMessage = "Please enter a message")]
        public string Message { get; set; } = string.Empty;
    }

    private List<ChatMessage> Messages { get; set; } = new();
    private ChatInputModel InputModel { get; set; } = new();
    private bool IsLoading { get; set; }
    private ElementReference _messagesContainer;
    private CancellationTokenSource? _cts;
    
    private HttpClient ApiClient => HttpClientFactory.CreateClient(HttpClients.RagApiClient);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender && Messages.Count > 0)
        {
            await ScrollToBottom();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", 
                $"document.querySelector('[data-messages-container]')?.scrollTo({{ top: document.querySelector('[data-messages-container]').scrollHeight, behavior: 'smooth' }})");
        }
        catch
        {
            // Ignore JS errors
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            if (IsLoading) return; // prevent double-submit
            await HandleSubmitAsync();
        }
    }

    private async Task HandleSubmitAsync()
    {
        if (IsLoading) return; // prevent overlap
        if (string.IsNullOrWhiteSpace(InputModel.Message))
            return;

        var userMessage = new ChatMessage(ChatRole.User, InputModel.Message);
        Messages.Add(userMessage);
        
        InputModel.Message = string.Empty;
        
        // Cancel any in-flight chat request
        _cts?.Cancel();
        _cts?.Dispose();
        _cts = new CancellationTokenSource();
        var token = _cts.Token;
        var currentCts = _cts;

        IsLoading = true;
        StateHasChanged();

        try
        {
            var url = "chat";
            using var request = new HttpRequestMessage(HttpMethod.Post, url)
            {
                Content = JsonContent.Create(Messages)
            };
            request.Headers.Accept.Clear();
            request.Headers.Accept.ParseAdd("application/json");

            var response = await ApiClient.SendAsync(request, HttpCompletionOption.ResponseHeadersRead, token);

            if (currentCts != _cts || currentCts.IsCancellationRequested)
            {
                return; // stale response
            }
            
            if (!response.IsSuccessStatusCode)
            {
                var errorBody = await response.Content.ReadAsStringAsync(token);
                Messages.Add(new ChatMessage(
                    ChatRole.System, 
                    $"Error: {(int)response.StatusCode} {response.ReasonPhrase}\n{errorBody}"));
                return;
            }

            var responseMessages = await response.Content.ReadFromJsonAsync<List<ChatMessage>>(cancellationToken: token) ?? new List<ChatMessage>();
            if (currentCts != _cts || currentCts.IsCancellationRequested)
            {
                return; // stale
            }

            if (responseMessages.Count == 0)
            {
                Messages.Add(new ChatMessage(ChatRole.System, "(empty response)"));
            }
            else
            {
                foreach (var msg in responseMessages)
                {
                    if (msg.Role != ChatRole.User)
                    {
                        Messages.Add(msg);
                    }
                }
            }
        }
        catch (TaskCanceledException)
        {
            if (!token.IsCancellationRequested)
            {
                Messages.Add(new ChatMessage(ChatRole.System, "The request timed out."));
            }
        }
        catch (HttpRequestException httpEx)
        {
            Messages.Add(new ChatMessage(ChatRole.System, $"Network error: {httpEx.Message}"));
        }
        catch (Exception ex)
        {
            Messages.Add(new ChatMessage(ChatRole.System, $"Unexpected error: {ex.Message}"));
        }
        finally
        {
            IsLoading = false;
           
        }
    }

    public void Dispose()
    {
        _cts?.Cancel();
        _cts?.Dispose();
    }

    private string GetMessageContainerClass(ChatRole role)
    {
        if (role == ChatRole.User) return "flex items-end gap-3 justify-end";
        if (role == ChatRole.Assistant) return "flex items-end gap-3 justify-start";
        if (role == ChatRole.System) return "flex items-center gap-3 justify-center";
        return "flex items-end gap-3 justify-start";
    }

    private string GetAvatarClass(ChatRole role)
    {
        if (role == ChatRole.User) return "h-8 w-8 rounded-md bg-gradient-to-br from-green-600 to-green-400 flex items-center justify-center text-white text-xs font-semibold";
        if (role == ChatRole.Assistant) return "h-8 w-8 rounded-md bg-gradient-to-br from-ocio-blue-600 to-ocio-blue-400 flex items-center justify-center text-white text-xs font-semibold";
        if (role == ChatRole.System) return "h-8 w-8 rounded-md bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center text-white text-xs font-semibold";
        return "h-8 w-8 rounded-md bg-gray-400 flex items-center justify-center text-white text-xs font-semibold";
    }

    private string GetMessageBubbleClass(ChatRole role)
    {
        if (role == ChatRole.User) return "rounded-2xl bg-ocio-blue-400 px-4 py-3 text-white shadow-md max-w-[70%] text-sm leading-relaxed";
        if (role == ChatRole.Assistant) return "rounded-2xl border border-gray-200 bg-white px-4 py-3 text-gray-900 shadow-sm dark:border-gray-700 dark:bg-gray-800 dark:text-gray-100 max-w-[70%] text-sm leading-relaxed";
        if (role == ChatRole.System) return "rounded-2xl bg-amber-100 px-4 py-3 text-amber-900 shadow-sm dark:bg-amber-900/40 dark:text-amber-100 max-w-[70%] text-sm leading-relaxed";
        return "rounded-2xl border border-gray-200 bg-white px-4 py-3 text-gray-900 shadow-sm max-w-[70%] text-sm leading-relaxed";
    }

    private string GetAvatarInitials(ChatRole role)
    {
        if (role == ChatRole.User) return "You";
        if (role == ChatRole.Assistant) return "AI";
        if (role == ChatRole.System) return "SYS";
        return "?";
    }
}
